{% extends 'base.html.twig' %}

{% block body %}
     <div>
         <center>
        <form action="{{ path('produkty') }}" method="get">
            <label for="filter">Wpisz kod produktu</label>
            <input name="filter" type="text">
            <button type="submit" class="btn btn-default btn-sm">Szukaj</button>
        </form>
        </center>
    </div>
    <div class="container">    
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kod produktu</th>
                    <th>Ilość</th>
                    <th>Rok produkcji</th>
                    <th>Cena</th>
                </tr>
            </thead>
            <tbody>
               {% for product in products %}
                <tr>
                    <td>{{product.id}}</td>
                    <td>{{product.kodproduktu}}</td>
                    <td>{{product.ilosc}}</td>
                    <td>{{product.rokprodukcji}}</td>
                    <td>{{product.cena}}</td>
                </tr>
               {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(products) }}
        </div>
    </div>
{% endblock %}
